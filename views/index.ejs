            </div>
            <!-- Active Chat Item -->
          </aside>
          <!-- Right Panel (Chat Window) -->
          <main
            class="hidden h-full flex-1 flex-col lg:flex chat"
            style="display: none"
          >
            <div class="flex h-full w-full flex-col">
              <!-- Chat Header -->
              <header
                class="flex h-[60px] flex-shrink-0 items-center justify-between bg-input-bg-light px-4 dark:bg-panel-dark"
              >
                <div class="flex items-center gap-4">
                  <button
                    class="rounded-full p-2 text-text-secondary-light hover:bg-gray-200/50 dark:text-text-secondary-dark dark:hover:bg-white/10 lg:hidden arrow-back"
                  >
                    <span class="material-symbols-outlined">arrow_back</span>
                  </button>
                  <div
                    class="h-10 w-10 rounded-full bg-cover bg-center"
                    data-alt="Aarav's profile picture"
                    style="
                      background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBrVZVUUc4NYPQ3M_zrsXKrVYPUXIV7Hp1OQv-MyoflLIbtRo-paqY5ppHAh5bnfY5tobp_ZAk7rQWB2OkbTzCfpMLviGg5IuR5Qsmk0H5P1A3ks5h4rDMXXeWaTFN3RLqvbku6tnDGkqrtkWb8p0HP0exxvQCT0HumtQn2m3i7FPNSBvOBtF_asKGizFZsUsAzJfbXkvVedAfcaWcGf0Nbkgie2lcBbG8SwWvSAjlrIMiaz8_kh7XtaQqhvJz3DJb6gxPtGHlGJkQ');
