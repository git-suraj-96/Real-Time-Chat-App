        background-color: #efeae2;
      }
      .dark .chat-bg {
        background-image: url(https://lh3.googleusercontent.com/aida-public/AB6AXuDl3rVOiyiLZZgQuHgspyc5-dlWbFQwu8j14o2wGSgFWsrLGJEwTWsyP0TzX49nIyXoLyYTiMQhYsKcWvnP4uUIRXAnipuGsg_OpabfHra6jX8IKiELJS82tNAS4bC-zSXPCyN2Ryle0Nmc2t4nmMvu-h_BDhLAG9d0F1-K_y6KopcCUrqzJyfLvXudsvTOiO0J26CI_1kQgNIkCX8gGo9OHTWzBUO1BIrEb1iJ5vISkKiUzukgzDDfOgfeQnwRK5PtO2xiJmKXVQw);
        background-color: #0b141a;
        opacity: 0.06;
        /* A more complex dark mode would require a different image or blend modes */
      }
      .chat {
        display: none;
      }
      .margin-top {
        margin-top: 2px;
      }
      .flash-message {
        background-color: green;
        padding: 10px;
        color: white;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
          sans-serif;
        text-align: center;
        position: absolute;
        top: 5px;
        right: 5px;
        border-radius: 5px;
        margin-left: 5px;
        display: none;
      }
      @media (max-width:1020px) {
        main{
          position: absolute;
          width: 100%;
        }
        .flash-message{
          top: 15px;
          right: 29px;

        }
      }
     
    </style>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#00A884",
              "background-light": "#F0F2F5",
              "background-dark": "#111B21",
              "panel-light": "#FFFFFF",
              "panel-dark": "#202C33",
              "text-primary-light": "#111B21",
              "text-primary-dark": "#E9EDEF",
              "text-secondary-light": "#667781",
              "text-secondary-dark": "#8696A0",
              "sent-bubble-light": "#D9FDD3",
              "sent-bubble-dark": "#005C4B",
              "received-bubble-light": "#FFFFFF",
              "received-bubble-dark": "#202C33",
              "input-bg-light": "#F0F2F5",
              "input-bg-dark": "#2A3942",
            },
            fontFamily: {
              display: [
                "Plus Jakarta Sans",
                "Segoe UI",
                "Helvetica Neue",
                "sans-serif",
